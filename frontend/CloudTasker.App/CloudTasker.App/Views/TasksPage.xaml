<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CloudTasker.App.Views.TasksPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tasks">

    <ContentPage.ToolbarItems>
        <!-- Add button in the top bar -->
        <ToolbarItem Text="Add"
                     IconImageSource="plus.png"
                     Command="{Binding AddTaskCommand}" />
    </ContentPage.ToolbarItems>

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
        <CollectionView ItemsSource="{Binding Tasks}"
                        ItemsLayout="VerticalList"
                        Margin="10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                           Padding="10"
                           CornerRadius="12"
                           HasShadow="True"
                           BackgroundColor="White">

                        <Grid ColumnDefinitions="40,*,Auto,Auto"
                              RowDefinitions="Auto,Auto">

                            <!-- Checkbox -->
                            <CheckBox IsChecked="{Binding IsDone}"
                                      Grid.RowSpan="2"
                                      VerticalOptions="Start"
                                      Margin="0,5,10,0"/>

                            <!-- Title -->
                            <Label Text="{Binding Title}"
                                   Grid.Column="1"
                                   FontAttributes="Bold"
                                   FontSize="Medium"
                                   TextColor="Black" />

                            <ImageButton Grid.Column="2"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditTaskCommand}"
                                 CommandParameter="{Binding .}">
                                <ImageButton.Source>
                                    <FontImageSource Glyph="âœŽ" Color="Gray" Size="20" />
                                </ImageButton.Source>
                            </ImageButton>

                            <ImageButton Grid.Column="3"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteTaskCommand}"
                                 CommandParameter="{Binding Id}">
                                <ImageButton.Source>
                                    <FontImageSource Glyph="ðŸ—‘" Color="Red" Size="20" />
                                </ImageButton.Source>
                            </ImageButton>


                            <!-- Description -->
                            <Label Text="{Binding Description}"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   FontSize="Small"
                                   TextColor="Gray"
                                   LineBreakMode="WordWrap"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
